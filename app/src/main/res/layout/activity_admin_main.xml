<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tvWelcomeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Admin!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button to Send File -->
    <Button
        android:id="@+id/btnAdminSendFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send File"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- Button to Receive Files -->
    <Button
        android:id="@+id/btnAdminReceiveFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Files"
        app:layout_constraintTop_toBottomOf="@id/btnAdminSendFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Button to View File Activity -->
    <Button
        android:id="@+id/btnAdminFileActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Activity"
        app:layout_constraintTop_toBottomOf="@id/btnAdminReceiveFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Button to Change Role Activity -->
    <Button
        android:id="@+id/btnAdminRoleActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role Activity"
        app:layout_constraintTop_toBottomOf="@id/btnAdminFileActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Button to View Login History -->
    <Button
        android:id="@+id/btnAdminViewLoginHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Login History"
        app:layout_constraintTop_toBottomOf="@id/btnAdminRoleActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Add Member Button -->
    <Button
        android:id="@+id/btnAdminAddMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member"
        app:layout_constraintTop_toBottomOf="@id/btnAdminViewLoginHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnAdminLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAdminAddMember" />

</androidx.constraintlayout.widget.ConstraintLayout>
